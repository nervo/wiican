import gobject
import dbus
from dbus.mainloop.glib import DBusGMainLoop
from wiican import wiimotemanager

DBusGMainLoop(set_as_default=True)

wiican = wiimotemanager.WiimoteStatusIcon()

gobject.MainLoop().run()
